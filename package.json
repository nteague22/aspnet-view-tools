{
    "name": "aspnet-view-tools",
    "displayName": "aspnet-view-tools",
    "description": "Tools for various providers that support operations about ASP.Net Views, both webforms and razor",
    "version": "0.1.5",
    "publisher": "nteague",
    "license": "MIT",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other",
        "Language Packs"
    ],
    "activationEvents": [
        "onLanguage:razor",
        "onLanguage:aspx"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "ASPNet View Tools",
            "properties": {
                "aspx.sharedPaths": {
                    "description": "The array of directories that should be searched for shared partials.  Will respect order given.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minItems": 1
                    }
                }
            }
        },
        "languages": [
            {
                "id": "aspx",
                "aliases": [
                    "ASPX Webforms",
                    "aspx-vb"
                ],
                "extensions": [
                    ".master",
                    ".aspx",
                    ".ascx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aspx",
                "scopeName": "source.aspx",
                "path": "./syntaxes/aspx.tmLanguage.json",
                "embeddedLanguages": {
                    "text.html": "html",
                    "source.asp.vb.net": "vb",
                    "source.css": "css",
                    "source.js": "javascript"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.67",
        "plist": "^3.0.1",
        "typescript": "^3.0.1",
        "vscode": "^1.1.18",
        "vscode-languageclient": "^4.0.0",
        "vscode-languageserver": "^4.0.0"
    }
}
