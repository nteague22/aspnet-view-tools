        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.7.2",
        "vscode": "^1.1.14",
        "vscode-languageclient": "^4.0.0",
        "vscode-languageserver": "^4.0.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
