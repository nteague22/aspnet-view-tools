{
    "name": "aspnet-view-tools",
    "displayName": "aspnet-view-tools",
    "description": "Tools for various providers that support operations about ASP.Net Views, both webforms and razor",
    "version": "0.0.2",
    "publisher": "nteague",
    "license": "MIT",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other",
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:razor",
        "onLanguage:aspx"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration":{
            "title": "aspnetViews",
            "properties": {
                "SharedPaths": {
                    "type":"array",
                    "items": {
                        "type":"string",
                        "minItems": 1
                    }
                }
            }
        },
        "languages": [{
            "id": "aspx",
            "aliases": ["ASPX Webforms", "aspx-vb"],
            "extensions": [".master", ".aspx", ".ascx"],
            "configuration": "./language-configuration.json"
        }],
        "themes": [
            {
                "label": "aspx-colors",
                "id": "aspx",
                "uiTheme": "vs-dark",
                "path": "./themes/aspx.tmTheme.json"
            }
        ],
        "grammars": [{
            "language": "aspx",
            "scopeName": "source.aspx",
            "path": "./syntaxes/aspx.tmLanguage.json",
            "embeddedLanguages": {
                "text.html": "html",
                "source.css": "css",
                "source.js": "javascript"
            }
        }]
    },
    "scripts": {
        "vscode:prepublish": "compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.7.2",
        "vscode": "^1.1.14",
        "vscode-languageclient": "^4.0.0",
        "vscode-languageserver": "^4.0.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
