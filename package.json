{
    "name": "razor-lang",
    "displayName": "razor-lang",
    "description": "Razor lang server",
    "version": "0.0.1",
    "publisher": "nteague",
    "license": "MIT",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:razor",
        "onLanguage:html"
    ],
    "main": "./out/extension",
    "contributes": {    
    },
    "scripts": {
        "vscode:prepublish": "compile",
